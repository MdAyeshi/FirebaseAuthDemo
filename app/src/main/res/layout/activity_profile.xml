<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mdjubairayeshi.firebaseauthdemo.ProfileActivity">

    <TextView
        android:id="@+id/textViewProfile"
        android:layout_width="375dp"
        android:layout_height="68dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Loged In"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogedOut" />

    <Button
        android:id="@+id/buttonLogedOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="logout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editTextUserName"
        android:layout_width="326dp"
        android:layout_height="55dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/textViewProfile"
        app:layout_constraintTop_toBottomOf="@+id/textViewProfile" />

    <EditText
        android:id="@+id/editTextUserAddress"
        android:layout_width="326dp"
        android:layout_height="55dp"
        android:layout_marginLeft="-1dp"
        android:ems="10"
        android:hint="Enter Address"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/editTextUserName"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextUserName" />

    <Button
        android:id="@+id/buttonSaveUserData"
        android:layout_width="155dp"
        android:layout_height="46dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="32dp"
        android:text="Save Data"
        app:layout_constraintLeft_toLeftOf="@+id/editTextUserAddress"
        app:layout_constraintTop_toBottomOf="@+id/editTextUserAddress" />
</android.support.constraint.ConstraintLayout>
